    cout << "Введіть тризначне число: ";
    cin >> N;

    if (N < 100 || N > 999)
    {
        cout << "Помилка: число повинно бути тризначним." << endl;
        return;
    }

    MoveLastDigitLeft(N);

    cout << "Отримане число: " << N << endl;
}



