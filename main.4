// Функція, що змінює порядок цифр числа на зворотний
void InvDigits(int &K)
{
    int reversed = 0;
    while (K > 0)
    {
        reversed = reversed * 10 + K % 10;
        K /= 10;
    }
    K = reversed;
}

void Task7()
{
    int numbers[5]; // масив для 5 чисел

    cout << "Введіть 5 цілих додатних чисел (0 < K < 10000):\n";
    for (int i = 0; i < 5; i++)
    {
        cin >> numbers[i];
    }

    // Зворотний порядок цифр у кожному числі
    for (int i = 0; i < 5; i++)
    {
        InvDigits(numbers[i]);
    }

    cout << "\nЧисла після зміни порядку цифр:\n";
    for (int i = 0; i < 5; i++)
    {
        cout << numbers[i] << " ";
    }

    cout << endl;
}

