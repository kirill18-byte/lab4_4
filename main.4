// -------------------- Proc46 --------------------
// Функція, що визначає, чи перетинаються два кола
bool CircleIntersect(double x1, double y1, double R1,
                     double x2, double y2, double R2)
{
    double d = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1)); // відстань між центрами
    return (fabs(R1 - R2) <= d && d <= R1 + R2); // умова перетину
}

void Task46()
{
    cout << "Перевірка трьох пар кіл:\n";

    // --- Три пари кіл ---
    double data[3][6] = {
        {0, 0, 5, 6, 0, 3},   // Перетинаються
        {0, 0, 2, 10, 10, 3}, // Не перетинаються
        {1, 1, 4, 3, 4, 4}    // Перетинаються
    };

    // Перевірка трьох пар
    for (int i = 0; i < 3; i++)
    {
        bool result = CircleIntersect(
            data[i][0], data[i][1], data[i][2],
            data[i][3], data[i][4], data[i][5]
        );

        cout << "Пара " << i + 1 << ": "
             << (result ? "True (перетинаються)" : "False (не перетинаються)") << endl;
    }
}

