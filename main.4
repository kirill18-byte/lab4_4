// -------------------- Proc7 --------------------
// Функція, що змінює порядок цифр числа на зворотний
void InvDigits(int &K)
{
    int reversed = 0;
    while (K > 0)
    {
        reversed = reversed * 10 + K % 10;
        K /= 10;
    }
    K = reversed;
}

void Task7()
{
    int numbers[5];

    cout << "Введіть 5 цілих додатних чисел (0 < K < 10000):\n";
    for (int i = 0; i < 5; i++)
    {
        cin >> numbers[i];
    }

    for (int i = 0; i < 5; i++)
    {
        InvDigits(numbers[i]);
    }

    cout << "\nЧисла після зміни порядку цифр:\n";
    for (int i = 0; i < 5; i++)
    {
        cout << numbers[i] << " ";
    }
    cout << endl;
}



// -------------------- Proc46 --------------------
// Функція, що визначає, чи перетинаються два кола
bool CircleIntersect(double x1, double y1, double R1,
                     double x2, double y2, double R2)
{
    double d = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
    return (fabs(R1 - R2) <= d && d <= R1 + R2);
}

void Task46()
{
    cout << "Перевірка трьох пар кіл:\n";

    double data[3][6] = {
        {0, 0, 5, 6, 0, 3},
        {0, 0, 2, 10, 10, 3},
        {1, 1, 4, 3, 4, 4}
    };

    for (int i = 0; i < 3; i++)
    {
        bool result = CircleIntersect(
            data[i][0], data[i][1], data[i][2],
            data[i][3], data[i][4], data[i][5]
        );

        cout << "Пара " << i + 1 << ": "
             << (result ? "True (перетинаються)" : "False (не перетинаються)")
             << endl;
    }
}



